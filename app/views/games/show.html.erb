<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:team1_id) %>:</strong></dt>
  <dd><%= @game.team1_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team2_id) %>:</strong></dt>
  <dd><%= @game.team2_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @game.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team1_score) %>:</strong></dt>
  <dd><%= @game.team1_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team2_score) %>:</strong></dt>
  <dd><%= @game.team2_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:line) %>:</strong></dt>
  <dd><%= @game.line %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
